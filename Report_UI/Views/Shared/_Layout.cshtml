<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BI</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqueryui")
    @Scripts.Render("~/bundles/modernizr")    
    
</head>
<body>       
    <div class="navbar navbar-inverse navbar-fixed-top">        
        <div class="container">                     
        <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dashboard", "Dashboard", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Operation", "Operation", "Home")</li>
                    <li class="dropdown">
                        <a href="~/Report/Index.cshtml" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reports<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Manage Reports", "Index", "Home")</li>
                            <li>@Html.ActionLink("Traffic InOutbound", "Index", "TrafficInOut")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Schedule", "Schedule", "Home")</li>
                    <li></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage Reference<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Create User", "Index", "Account/Register")</li>
                            <li>@Html.ActionLink("Master Reports", "Index", "Report")</li>
                            <li>@Html.ActionLink("KPI Setting", "Index", "KPI")</li>
                            <li>@Html.ActionLink("Parameter Setting", "Index", "Parameters")</li>
                            <li>@Html.ActionLink("System Setting", "System", "Home")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />        
            <footer>
                <div>&copy; @DateTime.Now.Year - CCPL Global LTD. All Rights Reserved.
                    <p class="mMdDyY pull-right">
                        @DateTime.Now.DayOfWeek, @DateTime.Now.ToString("MMMM") @DateTime.Now.Day,
                        @DateTime.Now.Year
                    </p>
                </div>                
            </footer>        
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")    
    @Scripts.Render("~/bundles/jqueryui")

    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd",
                changeYear: true,
                showOn: "button",                
                buttonImageOnly: true,
                buttonImage: "/Content/cal/calendar.gif",
            }).css("display", "inline-block")
                .next("button").button({
                icons: {primary: "ui-icon-calendar"},                
                buttonText: "Select a date",
                //text: false
            });             
        });
    </script>
    @RenderSection("scripts", required: false)
    
</body>
</html>
